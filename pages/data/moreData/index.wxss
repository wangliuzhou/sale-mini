.list {
  margin: 24rpx;
}
.list .item {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 10rpx 0rpx 20rpx rgba(0, 0, 0, 0.1);
}
.list .item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 24rpx;
}
.list .item .middle {
  flex: 1;
}
.list .item .middle .title {
  font-size: 28rpx;
  font-weight: 600;
}
