.list {
  margin: 24rpx;

  .item {
    margin-bottom: 24rpx;
    background: #fff;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    padding: 24rpx;
    box-sizing: border-box;
    box-shadow: 10rpx 0rpx 20rpx rgba(0, 0, 0, 0.1);

    image {
      width: 100rpx;
      height: 100rpx;
      margin-right: 24rpx;

    }

    .middle {
      flex: 1;

      .title {
        font-size: 28rpx;
        font-weight: 600;
      }
    }

  }
}