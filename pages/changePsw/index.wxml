<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">账户绑定</view>
</cu-custom>

<view class="public">
	原密码：
	<input
	 type="password"
	 data-type='p1'
	 value='{{p1}}'
	 bindinput='handleInput'
	 placeholder='填写原密码'
	/>
</view>
<view class="public">
	新密码：
	<input
	 type="password"
	 data-type='p2'
	 value='{{p2}}'
	 bindinput='handleInput'
	 placeholder='填写新密码'
	/>
</view>
<view class="public">
	确认新密码：
	<input
	 type="password"
	 data-type='p3'
	 value='{{p3}}'
	 bindinput='handleInput'
	 placeholder='确认新密码'
	/>
</view>

<view class="padding flex flex-direction" style='margin-top:400rpx'>
	<button class="cu-btn bg-blue lg shadow-blur" bindtap='handleSubmit'>提交</button>
</view>

