.role-container {
  background: #fff;
  margin: 24rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}
.role-container .title {
  font-size: 32rpx;
  font-weight: 500;
}
.role-container .role-type {
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 1px solid #eee;
  padding-left: 24rpx;
}
.role-container .card-list {
  display: flex;
  flex-wrap: wrap;
}
.role-container .card-list .item-top {
  margin-bottom: 12rpx;
}
.role-container .card-list .card-item {
  width: 50%;
  border-bottom: 1px solid #eee;
  padding: 24rpx;
}
.role-container .card-list .card-item .item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.role-container .card-list .card-item .item-bottom .require {
  margin-top: 20rpx;
  color: red;
  font-size: 40rpx;
}
.role-container .card-list .card-item-line {
  width: 100%;
  padding: 24rpx;
}
.choose-all-btn {
  margin: 0 48rpx 0 12rpx;
}
.point-content {
  height: 500rpx;
  overflow: scroll;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  width: 100%;
}
.point-content .point-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  border-bottom: 1px solid #eee;
  padding: 24rpx;
}
.point-content .point-item:nth-last-of-type(1) {
  border: none;
}
.psw {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.service-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}
.service-list .service-item {
  width: 49%;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 12rpx 0;
  border: 1px solid #ddd;
}
.service-list .service-item .service-deviceNo {
  background: orange;
  color: #fff;
  width: 80%;
  text-align: center;
  border-bottom-right-radius: 12rpx;
}
.service-list .service-item .service-bottom {
  display: flex;
  align-items: center;
}
.service-list .service-item .service-bottom .service-image {
  width: 50rpx;
  height: 80rpx;
  background: #ccc;
  margin: 24rpx 12rpx 24rpx 12rpx;
}
.service-list .service-item .service-bottom .service-image image {
  width: 100%;
  height: 100%;
}
.service-list .service-item .service-bottom .service-right {
  font-size: 24rpx;
}
