.list {
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 24rpx;
  box-sizing: border-box;
}
.list .item {
  width: 340rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 10rpx 0rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.list .item .left .name {
  font-weight: 600;
}
.list .item .left .desc {
  font-size: 24rpx;
  margin-top: 8rpx;
}
.list .item .right image {
  width: 90rpx;
  height: 90rpx;
}
